@model BeFit.ViewModels.EditTrainingSessionViewModel

@{
    ViewData["Title"] = "Edit Training Session";
}

<h2>Edit Training Session</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="ExerciseName" class="control-label"></label>
        <input asp-for="ExerciseName" class="form-control" readonly />
        <span asp-validation-for="ExerciseName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartTime" class="control-label"></label>
        <input asp-for="StartTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndTime" class="control-label"></label>
        <input asp-for="EndTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <h4>Workouts</h4>
    @foreach (var workout in Model.Workouts)
    {
        <div class="form-group">
            <label>Series:</label>
            <input asp-for="Series" class="form-control" value="@workout.Series" />
            <span asp-validation-for="Series" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Count:</label>
            <input asp-for="Count" class="form-control" value="@workout.Count" />
            <span asp-validation-for="Count" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Weight (kg):</label>
            <input asp-for="Weight" class="form-control" value="@workout.Weight" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
    }

    <!-- Buttons to save or cancel -->
    <div class="d-flex flex-column align-items-center mt-4">
        <button type="submit" class="btn btn-primary mb-3" style="width: 200px;">Save Changes</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width: 200px;">Cancel</a>
    </div>
</form>

<!-- Validation message and scripts -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
