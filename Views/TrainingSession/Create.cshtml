@model CreateTrainingSessionViewModel

@{
    ViewData["Title"] = "Add Training Session";
}

<h2>Add Training Session</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Exercise</label>
        <select asp-for="SelectedExerciseId" class="form-control">
            <option value="">-- Select Exercise --</option>
            @foreach (var exercise in Model.Exercises)
            {
                <option value="@exercise.Value">@exercise.Text</option>
            }
        </select>
        <span asp-validation-for="SelectedExerciseId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Start Time</label>
        <input asp-for="StartTime" type="datetime-local" min="2025-04-11T09:00" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">End Time</label>
        <input asp-for="EndTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <hr />

    <h4>Workout Info</h4>

    <div class="mb-3">
        <label class="form-label">Series</label>
        <input asp-for="Series" type="number" class="form-control" />
        <span asp-validation-for="Series" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Count</label>
        <input asp-for="Count" type="number" class="form-control" />
        <span asp-validation-for="Count" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Weight (kg)</label>
        <input asp-for="Weight" type="number" step="0.1" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="d-flex flex-row align-items-center justify-content-center mt-4">
        <button type="submit" class="btn btn-success mr-3">Save</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Cancel</a>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
